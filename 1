    <script>
        // Navigation and section visibility
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.section');
            const navLinks = document.querySelectorAll('.nav-link');
            
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
            
            // Section navigation
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    const sectionId = this.getAttribute('data-section');
                    if (sectionId) {
                        e.preventDefault();
                        
                        // Hide all sections
                        sections.forEach(section => {
                            section.classList.remove('active');
                        });
                        
                        // Show selected section
                        const targetSection = document.getElementById(sectionId);
                        if (targetSection) {
                            targetSection.classList.add('active');
                            
                            // Update active nav link
                            navLinks.forEach(navLink => {
                                navLink.classList.remove('active');
                            });
                            
                            // Set clicked link as active
                            this.classList.add('active');
                            
                            // Close mobile menu if open
                            mobileMenu.classList.add('hidden');
                            
                            // Scroll to top of the section
                            window.scrollTo({
                                top: 0,
                                behavior: 'smooth'
                            });
                        }
                    }
                });
            });
            
            // Slideshow functionality
            const slides = document.querySelectorAll('.slide');
            let currentSlide = 0;
            
            function showSlide(index) {
                slides.forEach(slide => {
                    slide.classList.remove('active');
                });
                
                slides[index].classList.add('active');
            }
            
            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            }
            
            // Change slide every 5 seconds
            setInterval(nextSlide, 5000);
            
            // Login form submissions
            const studentLoginForm = document.getElementById('studentLoginForm');
            const facultyLoginForm = document.getElementById('facultyLoginForm');
            const attendanceView = document.getElementById('attendanceView');
            const attendanceManagement = document.getElementById('attendanceManagement');
            
            if (studentLoginForm) {
                studentLoginForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // In a real application, you would validate credentials here
                    // For demo purposes, just show the attendance view
                    if (attendanceView) {
                        attendanceView.style.display = 'block';
                    }
                });
            }
            
            if (facultyLoginForm) {
                facultyLoginForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // In a real application, you would validate credentials here
                    // For demo purposes, just show the attendance management view
                    if (attendanceManagement) {
                        attendanceManagement.style.display = 'block';
                    }
                });
            }
            
            // Admission form submission
            const admissionForm = document.getElementById('admissionForm');
            if (admissionForm) {
                admissionForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Thank you for your application! We will contact you soon.');
                    this.reset();
                });
            }
            
            // Contact form submission
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    alert('Thank you for your message! We will get back to you soon.');
                    this.reset();
                });
            }
            
            // Prospectus download buttons
            const prospectusBtn = document.getElementById('prospectusBtn');
            const mobileProspectusBtn = document.getElementById('mobileProspectusBtn');
            const footerProspectusBtn = document.getElementById('footerProspectusBtn');
            
            const handleProspectusDownload = function(e) {
                e.preventDefault();
                alert('Prospectus will be downloaded. This functionality will be implemented with the actual file.');
            };
            
            if (prospectusBtn) prospectusBtn.addEventListener('click', handleProspectusDownload);
            if (mobileProspectusBtn) mobileProspectusBtn.addEventListener('click', handleProspectusDownload);
            if (footerProspectusBtn) footerProspectusBtn.addEventListener('click', handleProspectusDownload);
        });
    </script>
</body>
</html>
